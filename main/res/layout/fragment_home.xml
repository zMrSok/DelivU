<?xml version="1.0" encoding="utf-8"?>

<FrameLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    android:background="@color/btnSignUp">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:weightSum="5"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="fonts/PlayfaiDisplay.ttf"
                android:text="@string/categorie_principali"
                android:textColor="#FBFBFB"
                android:textSize="24sp"
                android:textStyle="italic" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_principali"
                android:layout_width="match_parent"
                android:layout_height="229dp" />


        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="fonts/PlayfairDysplay.ttf"
            android:text="@string/il_botteghino"
            android:textColor="#FBFBFB"
            android:textSize="24sp"
            android:textStyle="italic" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:autoScroll="true"
            app:isInfinite="true"
            app:scrollInterval="5000"
            />


    </LinearLayout>

</FrameLayout>


